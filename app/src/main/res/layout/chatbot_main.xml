<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/menubtn"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:src="@drawable/menubtn" />

            <TextView
                android:id="@+id/chat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:text="Chatbot"
                android:textSize="45dp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/bot"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:srcCompat="@drawable/botimg" />

                <TextView
                    android:id="@+id/chat1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:text="정책알림e 입니다.\n궁금하신 사항은 아래의\n자주묻는 질문을 확인!\n그밖에 질문은 1:1문의로\n남겨주시면 답변해드릴게요"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/faq"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="자주묻는질문"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#D7D9DA"
                android:onClick="onClick_Faq"/>
            <Button
                android:id="@+id/inquiry"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#D7D9DA"
                android:onClick="onClick_Inquiry"

                android:text="1:1문의" />

            <Button
                android:id="@+id/help"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:backgroundTint="#D7D9DA"
                android:onClick="onClick_Help"
                android:text="도움말" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>